@page
@model Sem.Pages.Authorization

@{
    ViewData["Title"] = "Вход";
}

<form method="post">
    <div class="container text-light">
        <h1>Вход</h1>
        <p>Пожалуйста, заполните форму, чтобы войти.</p>
        <div>
            <label class="font-weight-bold" asp-for="EmailAddress"></label>
            <input type="email" asp-for="EmailAddress" placeholder="Введите Email">
            <span class="text-danger font-weight-bold" asp-validation-for="EmailAddress"></span>
            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
        </div>

        <div class="d-flex align-items-center">
            <div class="w-100">
                <label class="font-weight-bold" asp-for="Password"></label>
                <input type="password" id="password-input" asp-for="Password" placeholder="Введите пароль">
            </div>
            
            <button type="button" class="font-weight-bold mt-4" id="show-password-btn">Показать пароль</button>
        </div>
        
        <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
        
        <div class="mt-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsRememberedMe">
                <label class="form-check-label white" asp-for="IsRememberedMe"></label>
            </div>
        </div>

        <input type="submit" class="registerbtn font-weight-bold" value="Вход">
    </div>
</form>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"></partial>
}
